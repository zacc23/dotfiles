# https://www.alsa-project.org/main/index.php/Asoundrc#dmix
# https://wiki.archlinux.org/title/Advanced_Linux_Sound_Architecture/Troubleshooting#Simultaneous_playback_problems

pcm.dmixer {
    type dmix
    slave {
	pcm "hw:1,0"
	period_time 0
        period_size 1024
        buffer_size 4096
        rate 44100
    }
    ipc_key 1024
    ipc_key_add_uid 0
    ipc_perm 0660
}

pcm.!default {
    type plug
    slave.pcm "dmix"
}
